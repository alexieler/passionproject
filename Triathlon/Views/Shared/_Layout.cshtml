<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
    <title>@ViewBag.Title - Log It</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container" id="nav">
            <div>
                <img id="main-logo" src="~/images/logo.png" alt="Logo for Log It">
                <img id="main-logo" src="~/images/logo.png" alt="Logo for Log It">
            </div>
                <div class="hidden">
                    @Html.ActionLink("Log It", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
            <div id="navigation-container">
                <ul class="navigation">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Athletes", "Index", "Athlete")</li>
                    <li>@Html.ActionLink("Workouts", "Index", "Workout")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content wrapper" id="wrapping-background">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year -Log It</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
