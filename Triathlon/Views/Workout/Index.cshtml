@model IEnumerable<Triathlon.Models.Workout>

@{
    ViewBag.Title = "Index";
}

<div class="main-intro">
    <img id="main-image" src="~/images/runner.jpeg" alt="Man running up stairs">
    <h1 class="main-header">Workouts</h1>
</div>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
           Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WorkoutDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WorkoutIntensity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WorkoutCategory)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Athlete.FirstName) @Html.DisplayFor(modelItem => item.Athlete.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WorkoutDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WorkoutIntensity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WorkoutCategory)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.WorkoutID }) |
            @Html.ActionLink("Details", "Details", new { id=item.WorkoutID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.WorkoutID })
        </td>
    </tr>
}

</table>
